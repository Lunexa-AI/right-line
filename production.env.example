# RightLine Production Environment Variables
# Copy to production.env and fill in your values

# ============================================
# CORE SETTINGS
# ============================================

# Application
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false

# Domain (your actual domain or IP)
DOMAIN=rightline.co.zw
ALLOWED_HOSTS=rightline.co.zw,www.rightline.co.zw,localhost

# CORS Origins (comma-separated)
CORS_ORIGINS=https://rightline.co.zw,https://www.rightline.co.zw

# ============================================
# SECURITY
# ============================================

# Secret key (generate with: openssl rand -hex 32)
SECRET_KEY=your-very-long-random-secret-key-at-least-32-characters-change-this

# ============================================
# WHATSAPP BUSINESS API
# ============================================

# Get from Meta Business Platform
WHATSAPP_WEBHOOK_URL=https://rightline.co.zw/webhook
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token-change-this
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token-from-meta
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-from-meta
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# ============================================
# TELEGRAM (Optional)
# ============================================

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=https://rightline.co.zw/telegram/webhook

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT=60  # Requests per minute per IP
RATE_LIMIT_BURST=10  # Burst allowance

# ============================================
# MONITORING (Optional but Recommended)
# ============================================

# Sentry (error tracking) - get free account at sentry.io
SENTRY_DSN=

# Enable metrics endpoint for Prometheus
METRICS_ENABLED=true

# ============================================
# BACKUPS
# ============================================

# Encryption key for backups (generate with: openssl rand -hex 32)
BACKUP_ENCRYPTION_KEY=

# S3-compatible storage for backups (optional)
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_ENDPOINT=

# ============================================
# PERFORMANCE TUNING
# ============================================

# Worker settings
WORKER_COUNT=1  # Number of uvicorn workers (1 for small VPS)
WORKER_TIMEOUT=30
REQUEST_TIMEOUT_MS=2000

# Cache settings
CACHE_TTL_SECONDS=900  # 15 minutes
CACHE_MAX_SIZE=1000

# ============================================
# FEATURE FLAGS
# ============================================

ENABLE_WHATSAPP=true
ENABLE_TELEGRAM=false
ENABLE_WEB_UI=true
ENABLE_API_DOCS=false  # Disable Swagger UI in production

# ============================================
# EXTERNAL SERVICES (Future)
# ============================================

# OpenAI (for future LLM features)
OPENAI_API_KEY=

# Google Cloud (for future OCR)
GOOGLE_APPLICATION_CREDENTIALS=

# ============================================
# NOTES
# ============================================
# 
# 1. Never commit this file with real values
# 2. Use strong, unique passwords for all services
# 3. Rotate secrets regularly
# 4. Keep backups of this configuration
# 5. Use environment-specific files (development.env, production.env)
