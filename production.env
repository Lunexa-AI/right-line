# Production Environment Configuration
RIGHTLINE_APP_ENV=production
RIGHTLINE_LOG_LEVEL=WARNING
RIGHTLINE_DEBUG=false
RIGHTLINE_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION

# Database (use production values)
RIGHTLINE_DATABASE_URL=postgresql://rightline:CHANGE-PASSWORD@db-host:5432/rightline_production
RIGHTLINE_DATABASE_POOL_SIZE=50

# Redis
RIGHTLINE_REDIS_URL=redis://redis-host:6379/0
RIGHTLINE_REDIS_MAX_CONNECTIONS=50

# Search
RIGHTLINE_MEILISEARCH_URL=http://meilisearch:7700
RIGHTLINE_MEILISEARCH_KEY=CHANGE-THIS-KEY
RIGHTLINE_QDRANT_URL=http://qdrant:6333

# Storage
RIGHTLINE_MINIO_URL=http://minio:9000
RIGHTLINE_MINIO_ACCESS_KEY=CHANGE-ACCESS-KEY
RIGHTLINE_MINIO_SECRET_KEY=CHANGE-SECRET-KEY

# API
RIGHTLINE_API_PORT=8000
RIGHTLINE_API_WORKERS=4
RIGHTLINE_RATE_LIMIT_PER_MINUTE=60
RIGHTLINE_RELOAD=false

# Workers
RIGHTLINE_WORKER_CONCURRENCY=8

# ML
RIGHTLINE_MODEL_PATH=/app/models
RIGHTLINE_DEVICE=cpu
RIGHTLINE_BATCH_SIZE=16

# Cache
RIGHTLINE_CACHE_TTL_SECONDS=3600

# Security
RIGHTLINE_JWT_SECRET=CHANGE-JWT-SECRET

# Monitoring
RIGHTLINE_SENTRY_DSN=CHANGE-SENTRY-DSN
RIGHTLINE_METRICS_ENABLED=true
RIGHTLINE_OTEL_ENABLED=true

# Production features
RIGHTLINE_PROFILE=false
