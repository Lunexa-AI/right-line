# RightLine MVP Environment Variables
# Copy this to .env and fill in your values

# ============================================
# REQUIRED - Must set these for app to start
# ============================================

# Security - Generate with: openssl rand -hex 32
RIGHTLINE_SECRET_KEY=change-this-to-a-random-32-character-string-minimum

# Database - For local development with Docker Compose
RIGHTLINE_DATABASE_URL=postgresql://rightline:rightline@localhost:5432/rightline

# For production, use your actual database URL
# RIGHTLINE_DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# OPTIONAL - Features and integrations
# ============================================

# Application Environment
RIGHTLINE_APP_ENV=development  # or 'production'
RIGHTLINE_LOG_LEVEL=INFO       # DEBUG, INFO, WARNING, ERROR

# Redis (only if using caching - not required for MVP)
# RIGHTLINE_REDIS_URL=redis://localhost:6379/0

# WhatsApp Integration (get from Meta Business Platform)
# RIGHTLINE_WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
# RIGHTLINE_WHATSAPP_ACCESS_TOKEN=your-page-access-token
# RIGHTLINE_WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Telegram Bot (optional)
# RIGHTLINE_TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather

# Monitoring (optional)
# RIGHTLINE_SENTRY_DSN=https://xxx@sentry.io/yyy

# ============================================
# RAG Configuration (Phase 2)
# ============================================

# Embedding Model (optional, defaults to local)
# RIGHTLINE_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
# RIGHTLINE_USE_OPENAI_EMBEDDINGS=false
# RIGHTLINE_OPENAI_API_KEY=sk-...

# Search Configuration
# RIGHTLINE_SEARCH_TOP_K=50
# RIGHTLINE_RERANK_TOP_K=10

# ============================================
# Development Settings
# ============================================

# CORS (for local development)
RIGHTLINE_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Debug Mode (never use in production!)
RIGHTLINE_DEBUG=false
