# RightLine MVP Environment Variables (Vercel + Milvus + OpenAI)
# Copy this to .env.local for local development

# ============================================
# REQUIRED - Must set these for app to start
# ============================================

# Security - Generate with: openssl rand -hex 32
RIGHTLINE_SECRET_KEY=change-this-to-a-random-32-character-string-minimum

# Application Environment
RIGHTLINE_APP_ENV=development  # or 'production'
RIGHTLINE_LOG_LEVEL=INFO       # DEBUG, INFO, WARNING, ERROR

# ============================================
# AI SERVICES - Required for RAG (Phase 2)
# ============================================

# OpenAI API (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo  # or gpt-4o-mini for better quality
OPENAI_MAX_TOKENS=300
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Milvus Cloud (get from https://cloud.milvus.io/)
MILVUS_ENDPOINT=https://your-cluster.api.gcp-us-west1.zillizcloud.com
MILVUS_TOKEN=your-cluster-token
MILVUS_COLLECTION_NAME=legal_chunks

# ============================================
# OPTIONAL - Features and integrations
# ============================================

# WhatsApp Integration (get from Meta Business Platform)
# RIGHTLINE_WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
# RIGHTLINE_WHATSAPP_ACCESS_TOKEN=your-page-access-token
# RIGHTLINE_WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Monitoring (optional)
# RIGHTLINE_SENTRY_DSN=https://xxx@sentry.io/yyy

# ============================================
# RAG Configuration
# ============================================

# Search Configuration
RIGHTLINE_SEARCH_TOP_K=20
RIGHTLINE_RERANK_TOP_K=10

# Confidence Thresholds
RIGHTLINE_HIGH_CONFIDENCE_THRESHOLD=0.8
RIGHTLINE_LOW_CONFIDENCE_THRESHOLD=0.4

# ============================================
# Observability & Tracing
# ============================================



# ============================================
# Development Settings
# ============================================

# CORS (for local development)
RIGHTLINE_CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Debug Mode (never use in production!)
RIGHTLINE_DEBUG=false
