# RightLine Environment Variables
# Copy this file to .env and customize for your environment

# Core Settings
RIGHTLINE_APP_ENV=development
RIGHTLINE_LOG_LEVEL=INFO
RIGHTLINE_SECRET_KEY=your-secret-key-here

# Database
RIGHTLINE_DATABASE_URL=postgresql://rightline:password@localhost:5432/rightline_dev

# Redis
RIGHTLINE_REDIS_URL=redis://localhost:6379/0

# Search
RIGHTLINE_MEILISEARCH_URL=http://localhost:7700
RIGHTLINE_MEILISEARCH_KEY=your-master-key
RIGHTLINE_QDRANT_URL=http://localhost:6333

# Storage
RIGHTLINE_MINIO_URL=http://localhost:9000
RIGHTLINE_MINIO_ACCESS_KEY=minioadmin
RIGHTLINE_MINIO_SECRET_KEY=minioadmin

# API
RIGHTLINE_API_PORT=8000
RIGHTLINE_RATE_LIMIT_PER_MINUTE=60

# Workers
RIGHTLINE_WORKER_CONCURRENCY=4

# ML
RIGHTLINE_MODEL_PATH=/app/models
RIGHTLINE_DEVICE=cpu

# Channels
RIGHTLINE_WHATSAPP_TOKEN=your-whatsapp-token
RIGHTLINE_TELEGRAM_TOKEN=your-telegram-token

# Monitoring
RIGHTLINE_SENTRY_DSN=your-sentry-dsn
