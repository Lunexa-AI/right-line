# Example sources manifest for Phase 2
# Copy to docs/data/sources.yaml and fill in URLs before running fetcher

labour_act:
  description: "Labour Act [Chapter 28:01] consolidated PDF"
  type: pdf
  source: official
  url: "https://<official-site>/labour_act_ch28_01_consolidated.pdf"  # <-- replace
  out_dir: labour_act

statutory_instruments:
  - description: "Wages Order (Sector A)"
    type: pdf
    source: official
    url: "https://<official-site>/si_<number>_<year>_wages_order_sector_a.pdf"  # <-- replace
    out_dir: sis
  - description: "Working Hours (Sector B)"
    type: pdf
    source: official
    url: "https://<official-site>/si_<number>_<year>_working_hours_sector_b.pdf"  # <-- replace
    out_dir: sis

zimlii_cases:
  - description: "Labour-related case 1"
    type: pdf
    source: zimlii
    url: "https://zimlii.org/zw/judgment/supreme-court/<id>.pdf"  # <-- replace
    out_dir: zimlii
  - description: "Labour-related case 2"
    type: html
    source: zimlii
    url: "https://zimlii.org/zw/judgment/high-court/<id>"  # <-- replace (HTML snapshot will be saved)
    out_dir: zimlii
