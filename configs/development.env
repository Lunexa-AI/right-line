# Development Environment Configuration
RIGHTLINE_APP_ENV=development
RIGHTLINE_LOG_LEVEL=DEBUG
RIGHTLINE_DEBUG=true
RIGHTLINE_SECRET_KEY=dev-secret-key-not-for-production-use-only

# Database
RIGHTLINE_DATABASE_URL=postgresql://rightline:rightline@localhost:5432/rightline_dev

# Redis
RIGHTLINE_REDIS_URL=redis://localhost:6379/0

# Search
RIGHTLINE_MEILISEARCH_URL=http://localhost:7700
RIGHTLINE_MEILISEARCH_KEY=masterKey
RIGHTLINE_QDRANT_URL=http://localhost:6333

# Storage
RIGHTLINE_MINIO_URL=http://localhost:9000
RIGHTLINE_MINIO_ACCESS_KEY=minioadmin
RIGHTLINE_MINIO_SECRET_KEY=minioadmin

# API
RIGHTLINE_API_PORT=8000
RIGHTLINE_RATE_LIMIT_PER_MINUTE=1000
RIGHTLINE_RELOAD=true

# Workers
RIGHTLINE_WORKER_CONCURRENCY=2

# ML
RIGHTLINE_MODEL_PATH=/app/models
RIGHTLINE_DEVICE=cpu
RIGHTLINE_BATCH_SIZE=4

# Cache (shorter for development)
RIGHTLINE_CACHE_TTL_SECONDS=60

# Development features
RIGHTLINE_PROFILE=true
RIGHTLINE_METRICS_ENABLED=true
